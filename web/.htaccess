# ========================================
# .htaccess for ELIOT - Simple & Compatible
# Location: ~/Documents/ELIOT/web/.htaccess
# ========================================

# Disable directory listing
Options -Indexes +FollowSymLinks

# Default charset
AddDefaultCharset UTF-8

# ========================================
# ERROR DOCUMENTS
# ========================================

ErrorDocument 404 /eliot/404.php

# ========================================
# BLOCK SENSITIVE FILES
# ========================================

<Files ".htaccess">
    Require all denied
</Files>

<FilesMatch "^(config|auth|functions)\.php$">
    Require all denied
</FilesMatch>

# ========================================
# CACHING
# ========================================

<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType image/jpg "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
</IfModule>

# ========================================
# URL REWRITING
# ========================================

<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /eliot/
    
    # Skip jika file atau folder ada
    RewriteCond %{REQUEST_FILENAME} -f [OR]
    RewriteCond %{REQUEST_FILENAME} -d
    RewriteRule . - [L]
    
    # Exclude 404.php dari redirect
    RewriteCond %{REQUEST_URI} !^/eliot/404\.php$
    
    # Redirect semua 404 ke custom page
    RewriteRule . 404.php [L]
</IfModule>

ErrorDocument 404 /eliot/web/404.php
ErrorDocument 500 /eliot/web/500.php
ErrorDocument 403 /eliot/web/403.php
ErrorDocument 401 /eliot/web/401.php

RewriteEngine On

# Jika file atau folder tidak ditemukan, redirect ke 404.php
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)$ /eliot/web/404.php [L,QSA]

